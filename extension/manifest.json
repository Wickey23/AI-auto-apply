{
  "manifest_version": 3,
  "name": "ApplyPilot - Job Clipper",
  "version": "1.0",
  "description": "Clip job postings to your local ApplyPilot dashboard.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
